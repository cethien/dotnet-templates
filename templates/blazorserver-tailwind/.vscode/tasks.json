{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/BlazorServerTailwindTemplate.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "publish",
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"${workspaceFolder}/BlazorServerTailwindTemplate.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "dotnet: watch",
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"run",
				"--project",
				"${workspaceFolder}/BlazorServerTailwindTemplate.csproj"
			],
			"problemMatcher": "$msCompile",
			"isBackground": true
		},
		{
			"label": "npm: dev:css",
			"type": "npm",
			"script": "dev:css",
			"problemMatcher": [],
			"isBackground": true
		},
		{
			"label": "dev",
			"dependsOn": [
				"dotnet: watch",
				"npm: dev:css"
			],
			"problemMatcher": "$msCompile",
		}
	]
}