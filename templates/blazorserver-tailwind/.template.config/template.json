{
	"$schema": "http://json.schemastore.org/template",
	"author": "Cethien",
	"classifications": [
		"Web",
		"Blazor"
	],
	"identity": "BlazorServerTailwind",
	"name": "Blazor Serverside + Tailwind CSS",
	"shortName": "blazorservertailwind",
	"tags": {
		"type": "project",
		"language": "C#"
	},
	"sourceName": "BlazorServerTailwindTemplate",
	"preferNameDirectory": true,
	"primaryOutputs": [
		{
			"path": "BlazorServerTailwindTemplate.csproj"
		}
	],
	"symbols": {
		"framework": {
			"type": "parameter",
			"description": "chooses framework used by project",
			"datatype": "choice",
			"choices": [
				{
					"choice": "net6.0"
				},
				{
					"choice": "net7.0"
				}
			],
			"defaultValue": "net6.0",
			"replaces": "{TargetFramework}"
		},
		"vscode": {
			"type": "parameter",
			"description": "enable .vscode with recommendations and tasks",
			"datatype": "bool",
			"defaultValue": "true"
		},
		"docker": {
			"type": "parameter",
			"description": "enable Dockerfile",
			"datatype": "bool",
			"defaultValue": "true"
		}
	},
	"sources": [
		{
			"modifiers": [
				{
					"exclude": [
						"**/.vs/**/*",
						"**/.idea/**/*",
						"**/[Bb]in/**",
						"**/[Oo]bj/**",
						".template.config/**/*",
						"**/*.filelist",
						"**/*.user",
						"**/*.lock.json",
						"**/node_modules/**",
						"**/wwwroot/css/app.min.css"
					]
				},
				{
					"condition": "(!vscode)",
					"exclude": [
						"**/.vscode/**"
					]
				},
				{
					"condition": "(!docker)",
					"exclude": [
						"**/.dockerignore**",
						"**Dockerfile**"
					]
				}
			]
		}
	],
	"postActions": [
		{
			"actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
			"description": "Restore NuGet packages required by this project.",
			"manualInstructions": [
				{
					"text": "Run 'dotnet restore'"
				}
			],
			"continueOnError": true
		}
	]
}